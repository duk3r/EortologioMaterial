<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content"
	android:paddingLeft="10dip"
	android:paddingRight="10dip" 
	android:clickable="true" android:orientation="horizontal" android:layout_width="wrap_content" android:gravity="left|center_vertical" android:background="@drawable/dashboard_button_selector">

	<ImageView
		android:id="@+id/icon" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"/>

	<TextView 
		android:id="@+id/title"
		android:paddingLeft="5dip"
		android:textColor="#666" android:paddingRight="5dip" android:textSize="11dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
</LinearLayout>